@model SaleApp.ViewModels.ProductEditVm

@{
    ViewData["Title"] = "Edit";
    var photoPath = "~/images/products/" + (Model.ExistImagePath ?? "default.png");
}

<h1>Edit</h1>

<h4>Categories</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="ExistImagePath" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            @if (ViewBag.ProductEditUnchangedErrorMessage != null)
            {
                <div class="alert alert-error text-danger">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <p><strong>Warning!</strong> This product'name cannot be changed due to the same name as the existing product!</p>
                </div>
            }
 
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" required/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Sale" class="control-label"></label>
                <input asp-for="Sale" class="form-control" required/>
                <span asp-validation-for="Sale" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" required/>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="BrandID" class="control-label"></label>
                <select asp-for="BrandID" asp-items="ViewBag.BrandList" class="form-control">
                </select>
                <span asp-validation-for="BrandID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label"></label>
                <select asp-for="CategoryID" asp-items="ViewBag.CategoryList" class="form-control">
                </select>
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Hot" class="control-label"></label>
                <input asp-for="Hot" class="form-control" required/>
                <span asp-validation-for="Hot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="ViewBag.StatusList" class="form-control">
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="5"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <div>
                    <div class="custom-file">
                        <input asp-for="Image" class="form-control custom-file-input" />
                        <label class="custom-file-label">Choose File ... </label>
                    </div>
                </div>
            </div>
            <img class="card-img-top" style="height:200px; width:150px" src="@photoPath" asp-append-version="true" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    });
                </script>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
