@model ApplicationCore.DTOs.ProductDto

@{
    //Layout = "_AnotherLayout" // it will override ViewLayout cua Home va Views
    ViewData["Title"] = "Detail";
    var photoPath = "~/images/products/" + (Model.ImagePath ?? "default.png");
}

<h1>Detail</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrandName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrandName) / Code : @Html.DisplayFor(model => model.BrandID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName) / Code : @Html.DisplayFor(model => model.CategoryID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sale)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sale)%
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hot)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.View)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.View)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusName) 
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Created_at)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Created_at)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Updated_at)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Updated_at)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImagePath)
        </dd>
    </dl>
    <img class="card-img-top" style="height:200px; width:150px" src="@photoPath" asp-append-version="true" />
</div>
<h1>@Model.ImagePath</h1>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
