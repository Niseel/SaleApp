@model SaleApp.ViewModels.CustomerLoginVm

@{
    ViewData["Title"] = "Account";
}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Login</h1>
                <nav class="d-flex align-items-center">
                    <a asp-controller="Home" asp-action="Index">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a asp-controller="Home" asp-action="Login">Login</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<!--================Login Box Area =================-->
<section class="login_box_area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login_box_img">
                    <img class="img-fluid" src="~/img/login.jpg" alt="">
                    <div class="hover">
                        <h4>New to our website?</h4>
                        <p>There are advances being made in science and technology everyday, and a good example of this is the</p>
                        <a class="primary-btn" asp-controller="Home" asp-action="Registration">Create an Account</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login_form_inner">
                    <h3>Register Your Account</h3>
                    <form class="row login_form" asp-controller="Home" asp-action="Login">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="col-md-12 form-group">
                            <input asp-for="CustomerMail" class="form-control" placeholder="Mail" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Mail'">
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="CustomerPassword" type="password" class="form-control" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'">
                        </div>
                        <div class="col-md-12 form-group">
                            <div class="creat_account">
                                <input type="checkbox">
                                <label for="f-option2">Keep me logged in</label>
                            </div>
                        </div>
                        <div class="col-md-12 form-group">
                            <button type="submit" value="submit" class="primary-btn">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@if (ViewBag.log == 0)
{
    @section Scripts {
        <script>
            var r = confirm("Your account is on the restricted list. Please contact the manager\nClick OK to redirect Login Page");
            if (r == true) {
                window.location.href = "/Home/Login";
            }
        </script>
    }
}
else if (ViewBag.log == 1)
{
    @section Scripts {
        <script>
            var r = confirm("Login successfuly");
            if (r == true) {
                window.location.href = "/Home/Index";
            }
        </script>
    }
}

<!--================End Login Box Area ================= -->